extends dashboardlayout

block content
    h1 Create Harvest Item Page

    p This page allows the user to create a harvest list post.

        h2.itemtitle Add to Harvest list Form
            .row
                .container
                    .item
                        form(accept-charset="UTF-8" action="/harvest_create" method="post")
                            .form-group
                                fieldset
                                    .form-group
                                        label(for='Username') User:
                                        input.form-control(name='username', type='text', placeholder='The user creating the harvest list item')
                                        br
                                    .form-group
                                        label(for='Type') Harvest type Name:
                                        input.form-control(name='type', type='text', placeholder='Please name the type of harvested crop')
                                        br
                                    .form-group
                                        label(for='Price') Harvest item Price:
                                        input.form-control(name='price', type='text', placeholder='Please set the price of harvested crop')
                                        br
                                    .form-group
                                        label(for='Description') Harvest item description:
                                        input.form-control(name='description', type='text', placeholder='Please describe the type of harvested crop')
                                        br
                                    .form-group
                                        label(for='Harvestweight') Harvest weight:
                                        input.form-control(name='harvestweight', type='text', placeholder='Please enter the harvest weight')
                                        br
                                    .form-group
                                        label(for='Harvestunits') Units of item available:
                                        input.form-control(name='harvestunits', type='text', placeholder='The number of units of the item available')
                                    button.button(type='submit') Submit