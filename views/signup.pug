extends layout
block content
    .row
        .container
            .item
                h1
                    span.fa.fa-sign-in
                    |  Signup

                // LOGIN FORM
                form(action='/signup', method='post')
                    .form-group
                        label Username
                        input.form-control(type='text', name='username')
                    .form-group
                        label Password
                        input.form-control(type='password', name='password')
                    button.button(type='submit') Signup
                hr
                p
                    | Already have an account?
                    br
                    a.button(href='/login') Login
                p
                    | Or go
                    br
                    a.button(href='/') home
                    | .

